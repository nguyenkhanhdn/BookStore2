@model IEnumerable<BookStore.Models.OrderStatus>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    Xử lý đơn hàng
}
<hr/>
<table class="display table-bordered table-responsive" id="orderstatus">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProcessedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProcessedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#orderstatus').DataTable({ autoWidth: false });
        });</script>
}